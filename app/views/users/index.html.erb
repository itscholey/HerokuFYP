<% provide(:title, "Users") %>
<h1>
    Users
</h1>
<p><%= link_to "Create New User", new_user_path %></p>

<% @users.each do |user| %>
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title"><%= link_to user.name, user %></h3>
    </div>
    <div class="panel-body">
        <ul>
            <li>Username:
                <%= user.username %>
                <% user.roles.each do |role| %>
            <li><%= role.name %></li>
            <% end %>
            <ul></div>
        </div>
        <br/>
<% end %>
