<% provide(:title, "Welcome") %>
<% provide(:pagetitle, "Welcome Back, #{current_user.name}") %>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Action Plans</h3>
    </div>
    <div class="panel-body">
      <p>Action Plans are used to detail actions to take to work towards a specified goal.
        Items can be assigned to individuals, and these items can be found in the calendar.</p>

      <%= link_to "Go to Action Plans", actionplans_path, class: "btn btn-primary" %>

    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Calendar</h3>
    </div>
    <div class="panel-body">
      <p>View your calendars, your upcoming meetings as well as your assigned action items to complete.</p>

      <%= link_to "Go to Calendar", calendar_path, class: "btn btn-primary" %>

    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Conversations</h3>
    </div>
    <div class="panel-body">
      <p>View your conversations with other users, or create a new one.</p>

      <%= link_to "Go to Conversations", conversations_path, class: "btn btn-primary" %>

    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Meetings</h3>
    </div>
    <div class="panel-body">
      <p>View your meetings, or create a new one.</p>

      <%= link_to "Go to Meetings", meetings_path, class: "btn btn-primary" %>

    </div>
</div>

<% unless current_user.role?(:parent) %>
  <div class="panel panel-primary">
      <div class="panel-heading">
          <h3 class="panel-title">Subjects</h3>
      </div>
      <div class="panel-body">
        <p>
          <% if current_user.role?(:student) %>
            View your subjects and the work that has been set.
          <% elsif current_user.role?(:admin) or current_user.role?(:teacher) %>
            View the subjects you manage.
          <% end %>
        </p>

        <%= link_to "Go to Subjects", subjects_path, class: "btn btn-primary" %>

      </div>
  </div>
<% end %>

<% if current_user.role?(:admin) %>
  <div class="panel panel-primary">
      <div class="panel-heading">
          <h3 class="panel-title">Users</h3>
      </div>
      <div class="panel-body">
        <p>View and manage users in the system.</p>
        <%= link_to "Go to Users", users_path, class: "btn btn-primary" %>
      </div>
  </div>
<% end %>

  <div class="panel panel-primary">
      <div class="panel-heading">
          <h3 class="panel-title">Work Log</h3>
      </div>
      <div class="panel-body">
        <p>View and manage work logs.</p>
        <%= link_to "Go to Work Log", work_logs_path, class: "btn btn-primary" %>
      </div>
  </div>
<% end %>
