<% provide(:title, "Meetings") %>

<h1>Meetings#index</h1>
<p>Find me in app/views/meetings/index.html.erb</p>

<%= link_to "Create a New Meeting", new_meeting_path %>

<% @meetings.each do |m| %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to m.subject, m %></h3>
  </div>
  <div class="panel-body">
    Date: <%= m.date %>
    <br/>
    Location: <%= m.location %>
    <br/>
    Agenda: <%= m.agenda %>
    <ul>
      <% m.attendees.each do |a| %>
        <li><%= a.user.name %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
