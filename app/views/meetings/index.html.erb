<% provide(:title, "Meetings") %>
<% provide(:pagetitle, "Meetings") %>

<%= link_to "Create a New Meeting", new_meeting_path, class: "btn btn-primary task-button" %>

<% @meetings.each do |m| %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to m.subject, m %></h3>
  </div>
  <div class="panel-body">
    <p>Date: <%= format_datetime(m.date) %></p>
    <p>Location: <%= m.location %></p>
    <p>Attendees:
      <ul>
        <% m.attendees.each do |a| %>
          <li><%= a.user.name %></li>
        <% end %>
      </ul>
    </p>
  </div>
</div>
<% end %>
