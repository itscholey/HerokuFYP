<% provide(:title, "Action Plans") %>
<% provide(:pagetitle, "Action Plans") %>

<%= link_to "Create a New Action Plan", new_actionplan_path, class: "btn btn-primary task-button" %>

<% @actionplans.each do |actionplan| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= link_to actionplan.title, actionplan %></h3>
    </div>
    <div class="panel-body">
      <p>Regarding: <%= actionplan.student.name %></p>
      <p>Action Items: <%= actionplan.actionitems.count %></p>
    </div>
  </div>
  <br/>
<% end %>
