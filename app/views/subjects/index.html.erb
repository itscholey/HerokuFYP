<% provide(:title, "Subjects") %>
<% provide(:pagetitle, "Subjects") %>

<%= link_to "Create Subject", new_subject_path, class: "btn btn-primary task-button" %>

<% @subjects.each do |subject| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= link_to subject.name, subject %></h3>
    </div>
    <div class="panel-body">
      <p>Teacher: <%= User.find(subject.user_id).name %></p>
      <p>Class Group: <%= subject.classGroup %></p>
    </div>
  </div>
<% end %>
